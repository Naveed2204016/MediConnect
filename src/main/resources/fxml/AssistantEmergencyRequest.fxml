<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AssistantEmergencyRequestController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="150.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" styleClass="status-bar" stylesheets="@../css/style.css" textFill="#e10c0c" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="70.0" />
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Emergency Request" textFill="#d10c0c" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
                            <font>
                                <Font name="Arial Bold Italic" size="28.0" />
                            </font>
                        </Label>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select Emergency Request to Accept/Reject:" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="15.0">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
            </top>
            <center>
                <TableView fx:id="emergency_req" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="request_id" text="Request Id" />
                        <TableColumn fx:id="patient_id" text="Patient Id" />
                        <TableColumn fx:id="details" text="Details" />
                        <TableColumn fx:id="contact" text="Contact" />
                        <TableColumn fx:id="request_date" text="Request Date" />
                        <TableColumn fx:id="tentative_date" text="Tentative Date" />
                        <TableColumn fx:id="status" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="70.0" spacing="20" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#accept_req" prefHeight="36.0" prefWidth="100.0" stylesheets="@../css/style.css" text="Accept" />
                        <Button mnemonicParsing="false" onAction="#reject_req" prefHeight="36.0" prefWidth="105.0" styleClass="logout-button" stylesheets="@../css/style.css" text="Reject" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>