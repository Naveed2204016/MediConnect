<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1000" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AssistantDashboardController">
    <left>
        <VBox prefHeight="623.0" prefWidth="202.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="sidebar-title" text="Assistant's Dashboard" />
                <Button mnemonicParsing="false" onAction="#loadPrimaryCheckup" styleClass="nav-button" text="Primary Checkup" />
                <Button mnemonicParsing="false" onAction="#loadUpdateInfo" styleClass="nav-button" text="Update Information" />
                <Button mnemonicParsing="false" onAction="#emergencyRequest" styleClass="nav-button" text="Emergency Requests" />
                <Button mnemonicParsing="false" onAction="#cancelAppointment" styleClass="nav-button" text="Cancel Appointment" />
                <Region prefHeight="421.0" prefWidth="182.0" />
                <Button mnemonicParsing="false" onAction="#logout" styleClass="logout-button" text="Logout" textFill="#e63946" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-pane" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <VBox alignment="CENTER" spacing="10.0">
                <Label styleClass="title-label" text="Welcome to the Assistant's Dashboard!" />
                <Label styleClass="section-label" text="Please select an option from the sidebar to get started." />
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" styleClass="status-bar">
            <Label styleClass="welcome-message" text="Welcome, Assistant" />
            <Label fx:id="statusMessage" styleClass="status-message" text="Ready" />
        </HBox>
    </bottom>
</BorderPane>