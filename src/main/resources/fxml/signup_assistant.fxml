<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AssistantSignupController"
            stylesheets="@../css/style.css"
            prefWidth="1000" prefHeight="700">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="220" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Label text="MediConnect" styleClass="sidebar-title"/>
            <Button text="About Mediconnect" styleClass="nav-button"/>
            <Button text="Terms and Condition" styleClass="nav-button"/>
            <Button text="Contact Us" styleClass="nav-button"/>
            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" bottom="30" left="40" right="40"/>
            </padding>
            <Label text="Assistant Sign Up" styleClass="title-label"/>
            <VBox spacing="10.0" alignment="CENTER" maxWidth="320">
                <TextField fx:id="nameField" promptText="Name" maxWidth="280"/>
                <TextField fx:id="contactField" promptText="Contact Number" maxWidth="280"/>
                <TextField fx:id="emailField" promptText="Email" maxWidth="280"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="280"/>
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="backButton" text="←" onAction="#handleBack"
                            styleClass="back-button"
                            prefWidth="40" prefHeight="40"/>
                    <Button text="Sign Up" onAction="#handleSignup"
                            styleClass="form-button" maxWidth="150"/>
                </HBox>
                <Label fx:id="errorLabel" textFill="red" styleClass="error-text"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>