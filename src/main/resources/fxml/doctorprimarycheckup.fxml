<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DoctorPrimaryCheckupController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-padding: 20;">

    <Label text="Primary Checkup Details of Patients'" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="200"/>
            <ColumnConstraints halignment="LEFT" prefWidth="200"/>
        </columnConstraints>

        <Label text="Search a Patient" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Patient ID" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="pid" promptText="2"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Patient Name" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="pname" promptText="John Doe"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Patient Contact no" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="pcontactno" promptText="018********"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="Search" onAction="#handleSearch"
                GridPane.rowIndex="4" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT"/>
    </GridPane>

    <TableView fx:id="primarycheckuptable" prefHeight="200">
        <columns>
            <TableColumn text="Patient Name" prefWidth="150" fx:id="p_name"/>
            <TableColumn text="Age(kg)" prefWidth="150" fx:id="page"/>
            <TableColumn text="Weight" prefWidth="150" fx:id="pweight"/>
            <TableColumn text="Blood Pressure(mmHg)" prefWidth="150" fx:id="pbloodpressure"/>
        </columns>
    </TableView>

</VBox>







