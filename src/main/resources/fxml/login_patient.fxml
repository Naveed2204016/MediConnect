<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LoginController"
            stylesheets="@../css/style.css"
            prefWidth="1000" prefHeight="700">

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="40.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <Label text="Patient Login" styleClass="title-label"/>

        <!-- Group inputs inside a centered box -->
        <VBox spacing="15.0" alignment="CENTER" maxWidth="300">

            <VBox spacing="5" alignment="CENTER">
                <Label text="User ID" styleClass="input-label"/>
                <TextField fx:id="userIdField" promptText="Enter User ID" maxWidth="280"/>
            </VBox>

            <VBox spacing="5" alignment="CENTER">
                <Label text="Password" styleClass="input-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter Password" maxWidth="280"/>
            </VBox>

            <Button text="Login" onAction="#handleLogin" styleClass="form-button" maxWidth="150"/>
            <Button text="Back to Welcome" onAction="#handleBack" styleClass="form-button" maxWidth="150"/>
            <Label fx:id="errorLabel" textFill="red" styleClass="error-text"/>
        </VBox>
    </VBox>
</AnchorPane>
