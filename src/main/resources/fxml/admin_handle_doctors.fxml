<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.AdminHandleController"
      style="-fx-padding: 20;" spacing="30">

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="30" alignment="TOP_LEFT" style="-fx-padding: 20;">

                <!-- Doctor Section -->
                <VBox spacing="15">
                    <Label text="Search a Doctor" style="-fx-font-size: 16; -fx-font-weight: bold;" />

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="right" prefWidth="200"/>
                            <ColumnConstraints halignment="left"  prefWidth="200"/>
                        </columnConstraints>

                        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField" promptText="Optional"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Specialization" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="specializationField" promptText="Enter a specialization"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Hospital:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="hospitalField" promptText="Optional"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="cityField" promptText="Enter a City"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Button text="Search" onAction="#handlesearch"
                                GridPane.rowIndex="4" GridPane.columnIndex="1"
                                GridPane.halignment="RIGHT"/>
                    </GridPane>

                    <TableView fx:id="doctorsTable" prefHeight="400" prefWidth="800" editable="true" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="specializationCol" text="Specialization" prefWidth="200"/>
                            <TableColumn fx:id="qualificationCol" text="Qualification" prefWidth="200"/>
                            <TableColumn fx:id="hospitalCol" text="Hospital" prefWidth="150"/>
                            <TableColumn fx:id="cityCol" text="City" prefWidth="150"/>
                            <TableColumn fx:id="stCol" text="Start time" prefWidth="150"/>
                            <TableColumn fx:id="edCol" text="End time" prefWidth="150"/>
                            <TableColumn fx:id="feeCol" text="Fee" prefWidth="100"/>
                            <TableColumn fx:id="contactCol" text="Contact no" prefWidth="100"/>
                            <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
                        </columns>
                    </TableView>

                </VBox>

                <Separator/>

                <!-- Assistant Section -->
                <VBox spacing="15">
                    <Label text="Search an Assistant" style="-fx-font-size: 16; -fx-font-weight: bold;" />

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="right" prefWidth="200"/>
                            <ColumnConstraints halignment="left"  prefWidth="200"/>
                        </columnConstraints>

                        <Label text="Assistant ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="assistantidfield" promptText="Enter Assistant ID"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Doctor ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="doctoridfield" promptText="Enter Doctor ID"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="namefield" promptText="Optional"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Contact no:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="contactnofield" promptText="Optional"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Button text="Search" onAction="#handlesearchassistant"
                                GridPane.rowIndex="4" GridPane.columnIndex="1"
                                GridPane.halignment="RIGHT"/>
                    </GridPane>

                    <TableView fx:id="assistanttable" prefHeight="400" prefWidth="800" editable="true" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="assistantidcol" text="Assistant ID" prefWidth="150"/>
                            <TableColumn fx:id="doctoridcol" text="Doctor ID" prefWidth="150"/>
                            <TableColumn fx:id="namecol1" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="contactcol1" text="Contact no" prefWidth="150"/>
                            <TableColumn fx:id="emailcol1" text="Email" prefWidth="150"/>
                        </columns>
                    </TableView>


                </VBox>

            </VBox>
        </content>
    </ScrollPane>

</VBox>
