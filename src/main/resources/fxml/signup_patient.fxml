<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.PatientSignupController"
            stylesheets="@../css/style.css"
            prefWidth="1000" prefHeight="700">

    <Button fx:id="backButton" text="←" onAction="#handleBack"
            styleClass="back-button"
            AnchorPane.topAnchor="12.0" AnchorPane.leftAnchor="12.0"
            prefWidth="40" prefHeight="40"/>

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="60.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <Label text="Patient Sign Up" styleClass="title-label"/>

        <VBox spacing="10.0" alignment="CENTER" maxWidth="320">

            <VBox spacing="5.0" alignment="CENTER">
                <Label text="Name" styleClass="input-label"/>
                <TextField fx:id="nameField" promptText="Enter Full Name" maxWidth="280"/>
            </VBox>

            <VBox spacing="5.0" alignment="CENTER">
                <Label text="Date of Birth" styleClass="input-label"/>
                <DatePicker fx:id="dobPicker" maxWidth="280"/>
            </VBox>

            <VBox spacing="5.0" alignment="CENTER">
                <Label text="Contact Number" styleClass="input-label"/>
                <TextField fx:id="contactField" promptText="Enter Contact Number" maxWidth="280"/>
            </VBox>

            <VBox spacing="5.0" alignment="CENTER">
                <Label text="Email" styleClass="input-label"/>
                <TextField fx:id="emailField" promptText="Enter Email Address" maxWidth="280"/>
            </VBox>

            <VBox spacing="5.0" alignment="CENTER">
                <Label text="Password" styleClass="input-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter Password" maxWidth="280"/>
            </VBox>

            <Button text="Sign Up" onAction="#handleSignup" styleClass="form-button" maxWidth="150"/>


            <Label fx:id="errorLabel" textFill="red" styleClass="error-text"/>
        </VBox>
    </VBox>
</AnchorPane>


