        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Fee:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="feeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label prefHeight="18.0" prefWidth="108.0" text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="contactField" prefHeight="26.0" prefWidth="130.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Qualification:" GridPane.columnIndex="2" />
        <TextField fx:id="qualificationField" GridPane.columnIndex="3" />

        <Label text="Specialization:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="specializationField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

