        <PasswordField fx:id="passwordField" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Label text="Confirm Password:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="3" GridPane.rowIndex="3" />

        <Label text="Patient Slot:" GridPane.rowIndex="7" />
        <TextField fx:id="patientSlotField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="Emergency Slot:" GridPane.columnIndex="2" GridPane.rowIndex="7" />
        <TextField fx:id="emergencySlotField" GridPane.columnIndex="3" GridPane.rowIndex="7" />
      <Label text="Hospital" GridPane.rowIndex="10" />
      <TextField fx:id="hospital2Field" GridPane.columnIndex="1" GridPane.rowIndex="10" />
      <TextField fx:id="cityField" GridPane.columnIndex="3" GridPane.rowIndex="10" />
      <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="15" />
      <TextField fx:id="endTimeField" GridPane.columnIndex="3" GridPane.rowIndex="15" />
      <Label text="City" GridPane.columnIndex="2" GridPane.rowIndex="10" />
      <Label text="start time" GridPane.rowIndex="15" />
      <Label text="End time" GridPane.columnIndex="2" GridPane.rowIndex="15" />
   
