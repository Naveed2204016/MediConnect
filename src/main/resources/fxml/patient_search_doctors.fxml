<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.PatientSearchDoctorsController"
            prefHeight="600" prefWidth="800">

    <VBox alignment="TOP_CENTER" spacing="20"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- Search Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Search Doctors" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Search Criteria -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
                <ColumnConstraints halignment="LEFT" prefWidth="200"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="30"/>
            </rowConstraints>


            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="namefield" promptText="Enter a name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Specialization:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="specializationField" promptText="Enter a specialization" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Hospital:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="hospitalfield" promptText="Optional" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="cityField" promptText="Optional" GridPane.rowIndex="3" GridPane.columnIndex="1"/>


        </GridPane>

        <!-- Search Button -->
        <Button text="Search" onAction="#handleSearch" prefWidth="100"/>

        <!-- Results Table -->
        <TableView fx:id="doctorsTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
                <TableColumn fx:id="specializationCol" text="Specialization" prefWidth="200"/>
                <TableColumn fx:id="qualificationCol" text="Qualification" prefWidth="200"/>
                <TableColumn fx:id="hospitalCol" text="Hospital" prefWidth="150"/>
                <TableColumn fx:id="cityCol" text="City" prefWidth="150"/>
                <TableColumn fx:id="stCol" text="Start time" prefWidth="150"/>
                <TableColumn fx:id="edCol" text="End time" prefWidth="150"/>
                <TableColumn fx:id="feeCol" text="Fee" prefWidth="100"/>
                <TableColumn fx:id="contactCol" text="Contact no" prefWidth="100"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
                <TableColumn fx:id="actionCol" text="Action" prefWidth="100"/>
            </columns>
        </TableView>
        <!-- Selected Doctor Info -->
    </VBox>

    <Pane fx:id="popupLayer" pickOnBounds="false">
        <!-- Appointment Popup -->
        <VBox fx:id="appointmentBox" visible="false" managed="false" spacing="10"
              StackPane.alignment="CENTER"
              prefWidth="350"
              style="-fx-background-color: #f0f0f0; -fx-padding: 16; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, gray, 8, 0.3, 0, 0);">
            <HBox alignment="TOP_RIGHT">
                <Button fx:id="closeAppointmentBtn" text="✖" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-font-size: 16;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="normalAppointmentBtn" text="Normal Appointment" prefWidth="140"/>
                <Button fx:id="emergencyRequestBtn" text="Request for Emergency" prefWidth="140"/>
            </HBox>
        </VBox>
        <!-- Emergency Popup -->
        <VBox fx:id="emergencyBox" visible="false" managed="false" spacing="10"
              StackPane.alignment="CENTER"
              prefWidth="350"
              style="-fx-background-color:  #f0f0f0; -fx-padding: 16; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, gray, 8, 0.3, 0, 0);">
            <HBox alignment="TOP_RIGHT">
                <Button fx:id="closeEmergencyBtn" text="✖" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-font-size: 16;"/>
            </HBox>
            <TextField fx:id="symptomsField" promptText="Enter symptoms"/>
            <Button fx:id="submitEmergencyBtn" text="Submit" maxWidth="Infinity"/>
        </VBox>

    </Pane>
</AnchorPane>