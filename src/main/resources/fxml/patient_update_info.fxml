<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PatientUpdateInfoController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5;">

    <!-- Proper padding using Insets -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Update Your Information"
           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #5bbcff;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
            <ColumnConstraints prefWidth="250"/>
        </columnConstraints>

        <!-- Name -->
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Date of Birth -->
        <Label text="Date of Birth:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dobPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Contact -->
        <Label text="Contact Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Password -->
        <Label text="New Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Confirm Password -->
        <Label text="Confirm Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>



    <HBox spacing="20" alignment="CENTER">
        <Button text="Save Changes" onAction="#handleSave"
                style="-fx-background-color: #5bbcff; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #e63946; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>