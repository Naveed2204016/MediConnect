<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.doctor_patient_detailscontroller">
   <children>
      <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="666.0" prefWidth="729.0">
         <top>
            <Label prefHeight="75.0" prefWidth="798.0" styleClass="title-label" stylesheets="@../css/style.css" text="Pateient's Details" textFill="#232222" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <VBox prefHeight="435.0" prefWidth="332.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="patientc" prefHeight="309.0" prefWidth="730.0">
                     <columns>
                        <TableColumn fx:id="patname" prefWidth="112.0" text="patient name" />
                        <TableColumn fx:id="patemail" prefWidth="117.59996795654297" text="Patient Email" />
                        <TableColumn fx:id="pastvisit" prefWidth="288.0000305175781" text="Past Visit" />
                        <TableColumn fx:id="patcontact" prefWidth="117.59998321533203" text="Pateint contact" />
                        <TableColumn prefWidth="75.0" />
                     </columns>
                  </TableView>
                  <Label prefHeight="64.0" prefWidth="124.0" stylesheets="@../css/style.css" text="Add Details:" textAlignment="RIGHT" textFill="#54bcd7">
                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="details" prefHeight="91.0" prefWidth="697.0" />
                  <Button fx:id="adddetails" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#adddetails" prefHeight="26.0" prefWidth="182.0" stylesheets="@../css/style.css" text="Add" />
               </children>
            </VBox>
         </bottom>
         <center>
            <HBox alignment="CENTER_LEFT" prefHeight="95.0" prefWidth="798.0" styleClass="input-label" BorderPane.alignment="CENTER">
               <children>
                  <Label contentDisplay="RIGHT" prefHeight="44.0" prefWidth="138.0" text="Search a Patient Name" />
                  <TextField fx:id="patient_id" alignment="CENTER" prefHeight="38.0" prefWidth="184.0" />
                  <Button fx:id="searchd" mnemonicParsing="false" onAction="#searchp" text="Search" />
               </children>
            </HBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
