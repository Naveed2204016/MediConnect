<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.AdminLoadTestController"
      spacing="15" alignment="TOP_LEFT"
      style="-fx-padding: 20;">

    <Label text="Add Diagnostic Tests"
           style="-fx-font-size: 16; -fx-font-weight: bold;" />


    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
        </columnConstraints>

        <Label text="Test Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="testNameField" promptText="e.g. Blood Test"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Hospital:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="hospitalField" promptText="e.g. EverCare"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Fee:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="feeField" promptText="e.g. 500"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Time Slot:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="timeSlotField" promptText="e.g. 10:00 AM - 12:00 PM"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Instructions:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="instructionArea" promptText="Up to 50 characters"
                  prefRowCount="2"
                  wrapText="true"
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Button text="Add" onAction="#handleadd"
                GridPane.rowIndex="5" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT"/>
    </GridPane>

        <!-- Search Bar -->
        <HBox spacing="10">
            <Label text="Search a Test:"/>
            <TextField fx:id="testnamefield" promptText="Enter test name"/>
            <TextField fx:id="hospitalnamefield" promptText="Enter hospital name"/>
            <Button text="Search" onAction="#onSearch"/>
        </HBox>

        <!-- TableView -->
        <TableView fx:id="tableView" prefHeight="400" prefWidth="800" editable="true">
            <columns>
                <TableColumn fx:id="colTestName" text="Test Name" prefWidth="150"/>
                <TableColumn fx:id="colHospital" text="Hospital" prefWidth="150"/>
                <TableColumn fx:id="colFee" text="Fee" prefWidth="100"/>
                <TableColumn fx:id="colTimeSlot" text="Time Slot" prefWidth="150"/>
                <TableColumn fx:id="colInstructions" text="Instructions" prefWidth="250"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="10">
            <Button text="Remove Selected" onAction="#onRemoveSelected"/>
            <Button text="Update Selected" onAction="#onUpdateSelected"/>
        </HBox>

</VBox>
