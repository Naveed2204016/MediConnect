<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1000" stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controllers.LoginController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="10" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
            <Label styleClass="sidebar-title" text="MediConnect" />
            <Button styleClass="nav-button" text="About Mediconnect" />
            <Button styleClass="nav-button" text="Terms and Condition" />
            <Button styleClass="nav-button" text="Contact Us" />
            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="backport">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>
            <Label styleClass="title-label" text="Assistant Login" />
            <VBox alignment="CENTER" maxWidth="300" spacing="15.0">
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="input-label" text="User ID" />
                    <TextField fx:id="userIdField" maxWidth="280" promptText="Enter User ID" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="input-label" text="Password" />
                    <PasswordField fx:id="passwordField" maxWidth="280" promptText="Enter Password" />
                </VBox>
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="backButton" onAction="#handleBack" prefHeight="40" prefWidth="40" styleClass="back-button" text="←" />
                    <Button maxWidth="150" onAction="#handleLogin" styleClass="form-button" text="Login" />
                </HBox>
                <Label fx:id="errorLabel" styleClass="error-text" textFill="red" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
