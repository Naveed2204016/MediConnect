<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1000"  stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Doctors_Dashboard_controller">
   <left>
      <VBox prefHeight="623.0" prefWidth="202.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <children>
            <Label prefHeight="54.0" prefWidth="194.0" styleClass="sidebar-title" text="Doctor's Dashboard" />
            <Button mnemonicParsing="false" onAction="#dr_search_patients" styleClass="nav-button" text="Patient Record" />
            <Button mnemonicParsing="false" onAction="#loadUpdateInfo" styleClass="nav-button" text="Update Information" />
            <Button mnemonicParsing="false" onAction="#emergency_request" styleClass="nav-button" text="Emergency Requests" />
            <Button mnemonicParsing="false" onAction="#cancel_appointment" styleClass="nav-button" text="Cancel  Appointment" />
            <Button mnemonicParsing="false" onAction="#loadcheckup" styleClass="nav-button" text="Primary Checkup" />
            <Region prefHeight="421.0" prefWidth="182.0" />
            <Button mnemonicParsing="false" onAction="#logout" styleClass="logout-button" text="Logout" textFill="#bf2b2b" />
         </children>
      </VBox>
   </left>

   <center>
      <StackPane fx:id="contentArea" styleClass="content-pane">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
      </StackPane>
   </center>

   <!-- Status Bar -->
   <bottom>
      <HBox alignment="CENTER_RIGHT" styleClass="status-bar">
         <Label styleClass="welcome-message" text="Welcome, Admin" />
         <Label fx:id="statusMessage" styleClass="status-message" text="Ready" />
      </HBox>
   </bottom>

</BorderPane>
